<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/faces/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toMainPage</from-outcome>
            <to-view-id>/faces/main.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/faces/main.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toHelloPage</from-outcome>
            <to-view-id>/faces/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>pointController</managed-bean-name>
        <managed-bean-class>controller.PointController</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>coordinates</managed-bean-name>
        <managed-bean-class>model.Coordinates</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>